<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
      <% include ./partials/navbar.ejs %>

      <% if(messages.message) { %>
        <section class="card-container container d-flex justify-content-center animated slideInDown">

        <section class="alert alert-warning card user-message">
            <!-- <a href="/"><span class="far fa-window-close ml-2 mt-2 dark-blue-text"></span></a> -->
            <ul>
              <% messages.message.map(message => { %>
                <section id="user-message" class="d-flex justify-content-around align-items-center">
                <button class="close-message" type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <li>
                  <section><%= message %></section>
                </li>
              </section>
              <% }) %>
          </ul>
          </section>

        </section>
     <% } %>

      <main class="container mt-4">
            <h1 class="text-center dark-blue-text my-3">Sign In</h1>
          <section class="d-flex justify-content-center">
        <form action="/users/sign_in" method="POST" class="dark-blue-text col-10 col-md-8">
          <div class="form-group">
            <label for="username" >Username</label>
            <input name="username" type="text" class="form-control" id="user-username" aria-describedby="usernameHelp" placeholder="Enter Username">
          </div>
          <div class="form-group">
            <label for="password" class="mt-2">Password</label>
            <input name="password"type="password" class="form-control" id="user-password" placeholder="Enter Password">
          </div>
          <section class="d-flex justify-content-end">
            <button type="submit" class="btn btn-outline-secondary dark-blue-text">Sign In</button>
          </section>
        </form>
          </section>
      </main>


      <% include ./partials/baseScripts.ejs %>
    </body>
</html>